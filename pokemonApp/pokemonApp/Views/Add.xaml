<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="pokemonApp.Views.Add"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Nom :" 
                TextColor="Black"/>
            <Editor 
                x:Name="editor" 
                Placeholder="Entrez le nom du pokémon" 
                PlaceholderColor="Black" 
                TextColor="Black"
                MaxLength="15" />

            <Label 
                Text="Poid :" 
                TextColor="Black"/>
            <Editor 
                x:Name="editor1" 
                Placeholder="Entrez le poid du pokémon" 
                PlaceholderColor="Black" 
                TextColor="Black"
                MaxLength="15"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>